<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="helloWorld" class="com.spring.demo.HelloWorld">
        <property name="message" value="hello world"/>
    </bean>

    <bean id="singleton" class="com.spring.demo.HelloWorld" scope="singleton">
    </bean>

    <bean id="prototype" class="com.spring.demo.HelloWorld" scope="prototype"></bean>

    <bean id="test" class="com.spring.demo.HelloWorld" init-method="init" destroy-method="destory">
        <property name="message" value="hello world"></property>
     </bean>
</beans>